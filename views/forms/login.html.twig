{% extends 'layout.html.twig' %}

{% block title %}Authentification utilisateur{% endblock %}

{% block content %}
<h2 class="text-center text-dark">{{ block('title') }}</h2>
{% if error %}
<div class="alert alert-danger">
    <strong>Login failed!</strong> {{ error }}
</div>
{% endif %}
<div class="card shadow-sm mx-auto w-50">
    <div class="card-header bg-dark text-white py-3">
        <h5 class="mb-0 text-center">Authentification</h5>
    </div>
    <div class="card-body">
        <form class="needs-validation" novalidate role="form" action="{{ path('login_check') }}" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Enter your username" required autofocus>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Enter your password" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-box-arrow-in-right"></i> Connexion
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
